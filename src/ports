# fix later
ports() {
    if [[ $# -lt 1 ]]; then
        echo -e "Usage: ports <filename>"
        echo -e "Example: ports results.txt"
        echo -e "Note: Extracts unique open ports, excluding 80 and 443."
        return
    fi

    grep -E "\.[a-z]{1,}:[0-9]{1,}" "$1" | \
        grep -vE ":80/|:443/|:80$|:443$" | \
        cut -d" " -f1 | \
        cut -d/ -f3 | \
        sort -u
}
