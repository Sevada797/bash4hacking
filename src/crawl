crawl() {
    if [[ $# -eq 0 ]]; then
        echo "Usage:
    crawl <url> <depth> <pdt> [--sf] [-H 'Header: Value']...
    crawl -l <file> <depth> <pdt> [--sf] [-H 'Header: Value']...

    Examples:
      crawl https://github.com 0 5
      crawl https://example.com 2 30 --sf
      crawl https://example.com 2 30 -H 'Cookie: a=b' --sf
      crawl -l urls.txt 1 20 --sf -H 'Authorization: Bearer token'"
        return 1
    fi

    python3 "$BFH_PATH/pysrc/crawl.py" "$@"
}

