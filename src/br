br() {
    # If called with "log", just show br_finds.txt and exit
    if [[ "$1" == "log" ]]; then
        if [[ -f br_finds.txt ]]; then
            cat br_finds.txt
        else
            echo "No results found ðŸ¤· "
        fi
        return 1
    fi

    # Otherwise, run the bruter
    python3 "$BFH_PATH/pysrc/bruter.py"
}
